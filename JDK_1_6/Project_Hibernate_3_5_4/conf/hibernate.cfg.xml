       "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
   		<!-- Database connection settings -->
		<property name="connection.url">jdbc:mysql://192.168.88.158:3306/hibernate_3_5_4?useSSL=false&amp;autoReconnect=true</property>
